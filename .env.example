# ==========================================
# CONFIGURAÇÃO SUPABASE (OBRIGATÓRIO)
# ==========================================
# URL do projeto Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# Chave anônima pública do Supabase
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ==========================================
# CONFIGURAÇÃO DA APLICAÇÃO
# ==========================================
# URL base da aplicação (para redirects de auth)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# URL da API (geralmente a mesma do site)
NEXT_PUBLIC_API_URL=http://localhost:3000

# ==========================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO
# ==========================================
# Desabilitar telemetria do Next.js
NEXT_TELEMETRY_DISABLED=1
# Ambiente (development/production)
NODE_ENV=development

# ==========================================
# CONFIGURAÇÃO DE CACHE (OPCIONAL)
# ==========================================
# Redis para cache (se usando)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=stayfocus123

# ==========================================
# CONFIGURAÇÃO SUPABASE LOCAL (OPCIONAL)
# ==========================================
# Para usar Supabase local via Docker
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_USER=postgres
JWT_SECRET=super-secret-jwt-token-with-at-least-32-characters-long
SITE_URL=http://localhost:3000
API_EXTERNAL_URL=http://localhost:8000
DISABLE_SIGNUP=false
PGRST_DB_SCHEMAS=public
PGRST_DB_ANON_ROLE=anon

# ==========================================
# CONFIGURAÇÃO DE SEGURANÇA (PRODUÇÃO)
# ==========================================
# Chave secreta para JWT (mude em produção)
NEXTAUTH_SECRET=your-nextauth-secret-here
# URL canônica em produção
NEXTAUTH_URL=https://your-domain.com

# ==========================================
# CONFIGURAÇÃO DE ANÁLISE (OPCIONAL)
# ==========================================
# Google Analytics (se usando)
NEXT_PUBLIC_GA_ID=GA_MEASUREMENT_ID
# Outras ferramentas de análise
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# ==========================================
# CONFIGURAÇÃO DE FEATURES (OPCIONAL)
# ==========================================
# Habilitar modo debug
NEXT_PUBLIC_DEBUG=false
# Habilitar PWA
NEXT_PUBLIC_PWA_ENABLED=true
# Habilitar Service Worker
NEXT_PUBLIC_SW_ENABLED=true

# ==========================================
# CONFIGURAÇÃO DE PERFORMANCE (OPCIONAL)
# ==========================================
# Tamanho máximo de upload
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
# Cache TTL em segundos
NEXT_PUBLIC_CACHE_TTL=300

# ==========================================
# EXEMPLO DE CONFIGURAÇÃO PARA PRODUÇÃO
# ==========================================
# Copie para .env.production e ajuste os valores:
#
# NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
# NEXT_PUBLIC_SITE_URL=https://your-domain.com
# NEXT_PUBLIC_API_URL=https://your-domain.com
# NODE_ENV=production
# NEXTAUTH_SECRET=your-very-secure-secret
# NEXTAUTH_URL=https://your-domain.com